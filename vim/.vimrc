" Enable line numbers
set number

" Use spaces instead of tabs
set expandtab
set tabstop=4
set shiftwidth=4

" Show matching brackets
set showmatch

" Enable syntax highlighting
syntax on

" Set search to ignore case unless uppercase used
set ignorecase
set smartcase

" Highlight search matches as you type
set incsearch
set hlsearch

" Enable mouse support
set mouse=a

" Better backspace behavior
set backspace=indent,eol,start

" Enable clipboard integration (for most systems)
set clipboard=unnamedplus

" Show line and column in the statusline
set ruler

" Turn off annoying bell
set noerrorbells

